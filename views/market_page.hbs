
<div id="page" class="container-fluid">

  <div id="header" class="col-xl-12">
     <div class="col-xl-6" id="lefthead">
        <a href="/"><p id="left_text">GetFresh!</p></a>
     </div>
     <div class="home_page_error_message">
       {{error}}
     </div>
  </div>
  <div class="row" id="market_details">
      <br>
      <div class="jumbotron" id="market_details_jumbo">
        <h1>{{market_info.marketname}}</h1>
        <h2>Average Rating:</h2>
         <h3>{{market_info.address}}</h3>
         <br>
        <h3>Products List</h3>
        <p>{{market_info.products}}</p>
      </div>
    </div>

  <div class="row">
    <div id="reviews" class="col-lg-8"><br>
         {{#each market_reviews}}
           <div>

             <h3 class="market_text">{{title}}</h3>
             <h4 class="market_text">{{content}}</h4>
             <h3 class="market_text">Rating: {{rating}}</h3><br>
             <br><br>
           </div>
         {{/each}}
         </div>
  </div>

  <div class="row" id="write_review">
    <div class="col-lg-12">
      {{#if session.loggedInUser}}
      <div class="jumbotron" id="write_review_jumbo">
           <form action="/write_review/{{marketID}}" method="POST">
                <label><h3>Review Title: </h3></label>
                <input type="text" name="title" class="write_review_title">
             <label><h3 id="write_review_label">Rating:</h3></label>
             <select name="rating">
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
               <option value="4">4</option>
               <option value="5">5</option>
          </select><br>

           <textarea name="content" cols="120" rows="8" placeholder="Write your review here!"></textarea><br>
           <button type="submit">Submit</button>
           </form>


      </div>

   {{else}}
   <p>Please login or <a href="/signup">sign up</a> to write a review</p>
   {{/if}}
 </div>
</div>

</div>
