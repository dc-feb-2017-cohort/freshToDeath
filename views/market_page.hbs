<br><br><br><br>
<div id="page" class="container-fluid">


  <div class="row" id="market_details">
      <div id="market_stand" class="col-lg-4">
      <img src="/market_stand.png" alt="">
    </div>
      <div id="market_left" class="col-lg-4">
      <br>
      <h2>{{market_info.marketname}}</h2>
      <h3>{{market_info.address}}</h3>
      <p>Products List:</p>
      {{market_info.products}}


    </div>
    <div id="market_right" class="col-lg-4">
       <h2>Average Rating:</h2>
       <img src="/star.png" width="45px" alt="">
       <img src="/star.png" width="45px" alt="">
       <img src="/star.png" width="45px" alt="">
       <img src="/star.png" width="45px" alt="">
       <img src="/star.png" width="45px" alt="">
      </div>
    </div>

  <div class="row">
    <div id="reviews" class="col-lg-12"><br><br>
         <h1>Reviews</h1>
         {{#each market_reviews}}
           <h4><div>
             Title: {{title}}<br>
             Content: {{content}}<br>
             Rating: {{rating}}<br>
             <br><br>
           </div></h4>
         {{/each}}
         </div>

    <div id="content_area" class="col-lg-6">

    </div>
  </div>

  <div class="row" id="write_review">
    <div class="col-lg-12">
      {{#if session.loggedInUser}}
   <form action="/write_review/{{marketID}}" method="POST">
     <label><h3>Rating:</h3></label>
     <select name="rating">
       <option value="1">1</option>
       <option value="2">2</option>
       <option value="3">3</option>
       <option value="4">4</option>
       <option value="5">5</option>
     </select><br>
   <label><h3>Title: </h3></label><br>
   <input type="text" name="title"><br>
   <label><h3>Content:</h3></label><br>
   <textarea name="content" cols="90" rows="6"></textarea><br>
   <button type="submit">Submit</button>
   </form>
   {{else}}
   <p>Please login or <a href="/signup">sign up</a> to write a review</p>
   {{/if}}
 </div>
</div>

</div>
